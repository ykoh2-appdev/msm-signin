<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
      <div>
        <label for="movie_id_box">
          Movie
        </label>

        <%#<input type="text" id="movie_id_box" name="query_movie_id"> %>

        <select name="query_movie_id">
          <% Movie.all.order(:title).each do |a_movie| %>
            <option value="<%= a_movie.id %>">
              <%= a_movie.title %>
            </option>
          <% end %>
        </select>

      </div>

      <button>
        Bookmark this movie!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <%= a_bookmark.user.first_name %>
        </td>

        <td>
          <%= a_bookmark.movie.title %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show details
          </a>
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
